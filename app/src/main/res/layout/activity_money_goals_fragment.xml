<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aloksharma.ufl.edu.stash.MoneyGoalsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="45dp">


        <RelativeLayout
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical">

            <aloksharma.ufl.edu.stash.HoloCircularProgressBar
                android:id="@+id/moneyGoalsProgressBar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                custom:thumb_visible="true"
                custom:marker_visible="false"
                custom:circle_progress_color="#000000"
                custom:progress_background_color="#FFACA9AC"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="XX%"
                android:id="@+id/moneyGoalsPercentage"
                android:layout_marginBottom="65dp"
                android:layout_alignBottom="@+id/moneyGoalsProgressBar"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#95DBD5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GOAL"
                android:textStyle="bold"
                android:id="@+id/moneyGoalsTextView"
                android:paddingTop="10dp"
                android:layout_below="@+id/moneyGoalsPercentage"
                android:layout_toLeftOf="@+id/moneyGoalsProgressBar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="$2000"
                android:textStyle="bold"
                android:id="@+id/moneyGoalsGoalValue"
                android:paddingTop="5dp"
                android:layout_below="@+id/moneyGoalsTextView"
                android:layout_alignLeft="@+id/moneyGoalsTextView"
                android:layout_alignStart="@+id/moneyGoalsTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#95DBD5"
                android:text="TO SAVE"
                android:textStyle="bold"
                android:id="@+id/textView7"
                android:paddingTop="90dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/moneyGoalsTextView"
                android:layout_alignStart="@+id/moneyGoalsTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="$680"
                android:textStyle="bold"
                android:id="@+id/moneyGoalsToSaveAmount"
                android:paddingTop="5dp"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#95DBD5"
                android:text="MONTHLY SAVINGS REQUIRED"
                android:textStyle="bold"
                android:id="@+id/textView9"
                android:layout_below="@+id/moneyGoalsToSaveAmount"
                android:layout_alignLeft="@+id/moneyGoalsToSaveAmount"
                android:layout_alignStart="@+id/moneyGoalsToSaveAmount"
                android:layout_marginTop="31dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$340/month"
                android:textStyle="bold"
                android:id="@+id/moneyGoalsMonthlySavings"
                android:paddingTop="5dp"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9" />

        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
