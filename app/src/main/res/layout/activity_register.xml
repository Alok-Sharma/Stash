<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/_stash_background"
                tools:context="aloksharma.ufl.edu.stash.LoginActivity"
                android:weightSum="1">


    <ImageView
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/_stash_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/textViewUsername"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textViewPassword"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retype-Password"
        android:id="@+id/textViewReTypePassword"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/retypepassword"
        android:inputType="textPassword"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewReTypePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_below="@+id/retypepassword"
        android:layout_alignLeft="@+id/retypepassword"
        android:layout_alignStart="@+id/retypepassword"
        android:layout_alignRight="@+id/retypepassword"
        android:layout_alignEnd="@+id/retypepassword"/>


</RelativeLayout>
