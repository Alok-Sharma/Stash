<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aloksharma.ufl.edu.stash.AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/bankUsername"
                android:layout_marginTop="74dp"
                android:layout_alignParentTop="true"
                android:hint="Username"
                android:layout_alignLeft="@+id/bankPassword"
                android:layout_alignStart="@+id/bankPassword" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/bankPassword"
                android:layout_marginTop="49dp"
                android:layout_below="@+id/bankUsername"
                android:layout_alignParentLeft="true"
                android:hint="Password"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bankNamesList"
                android:layout_marginTop="44dp"
                android:layout_below="@+id/bankPassword"
                android:hint="Select Bank"
                android:layout_alignLeft="@+id/bankPassword"
                android:layout_alignStart="@+id/bankPassword"
                android:entries="@array/bank_names"
                android:spinnerMode="dropdown" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Account"
                android:id="@+id/add_account_btn"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/bankPassword"
                android:layout_alignEnd="@+id/bankPassword"
                android:layout_marginBottom="55dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
