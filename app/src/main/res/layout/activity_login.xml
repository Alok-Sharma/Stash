<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_stash_background"
    tools:context="aloksharma.ufl.edu.stash.LoginActivity"
    android:weightSum="1">


    <ImageView
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:id="@+id/stashLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/_stash_title" />

    <EditText
        android:id="@+id/username"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stashLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:imeOptions="actionDone"/>

    <Button
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignRight="@id/fb_login_button"
        android:layout_alignEnd="@id/fb_login_button"
        android:layout_alignLeft="@id/fb_login_button"
        android:layout_alignStart="@id/fb_login_button" />

    <Button
        android:text="Sign Up"
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/fb_login_button"
        android:layout_alignStart="@id/fb_login_button"
        android:layout_alignRight="@id/fb_login_button"
        android:layout_alignEnd="@id/fb_login_button"
        android:layout_marginBottom="10dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_above="@id/signUp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
