<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="191dp" android:layout_height="195dp" android:background="@drawable/noise">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableTop="#000000">

        <aloksharma.ufl.edu.stash.HoloCircularProgressBar
            android:id="@+id/holoCircularProgressBar"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="140dp"
            custom:marker_visible="false"
            custom:circle_progress_color="#FF2FE70E"
            custom:progress_background_color="#FFACA9AC">

        </aloksharma.ufl.edu.stash.HoloCircularProgressBar>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:text="25%"
            android:textColor="#FF2FE70E"
            android:id="@+id/stashPercent"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Stash Name"
            android:textColor="#FF2FE70E"
            android:paddingBottom="4dp"
            android:id="@+id/stashName"
            android:layout_gravity="center_horizontal|bottom" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/stashBorder"
                android:background="#FF2FE70E"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal|top"></LinearLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
