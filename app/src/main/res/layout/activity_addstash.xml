<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyActivity"
    android:weightSum="1">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.20">

        <EditText android:id="@+id/edit_stashname"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:hint="Stash Name"
            android:inputType="textMultiLine"/>

        <EditText android:id="@+id/edit_targetdate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below = "@+id/edit_stashname"
            android:layout_gravity="center"
            android:hint="Target Date"
            android:inputType="date"/>

        <EditText android:id="@+id/edit_goal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_below = "@+id/edit_goal"
            android:hint="Goal"
            android:inputType="number"/>

        <Button android:id="@+id/button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below = "@id/edit_goal"
            android:text="Create Stash"
            android:onClick="CreateStash" />

    </LinearLayout>

</LinearLayout>