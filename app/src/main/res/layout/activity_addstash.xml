<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    android:id="@+id/DrawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"
            >
        </include>

        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="aloksharma.ufl.edu.stash.AddStash">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_stashname"
                        android:layout_alignBottom="@+id/edit_stashname"
                        android:layout_alignEnd="@+id/textView2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/textView2"
                        android:layout_gravity="left"
                        android:text=" Name"
                        android:textColor="#444444"
                        android:textSize="20dp"/>

                    <EditText
                        android:id="@+id/edit_stashname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27dp"
                        android:ems="10"
                        android:inputType="text|textCapSentences"
                        android:singleLine="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignLeft="@+id/edit_targetdate"
                        android:layout_alignStart="@+id/edit_targetdate"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_targetdate"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="left"
                        android:text="Target Date"
                        android:textColor="#444444"
                        android:textSize="20dp"/>

                    <EditText
                        android:id="@+id/edit_targetdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/edit_stashname"
                        android:layout_marginTop="50dp"
                        android:ems="10"
                        android:inputType="date"
                        android:paddingLeft="25dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendarImageAddStash"
                        android:src="@drawable/ic_insert_invitation_black_24dp"
                        android:layout_alignStart="@+id/edit_targetdate"
                        android:layout_alignBottom="@+id/textView2"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_goal"
                        android:layout_alignBottom="@+id/edit_goal"
                        android:layout_alignEnd="@+id/textView2"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/textView2"
                        android:layout_toStartOf="@+id/edit_goal"
                        android:text=" Goal"
                        android:textColor="#444444"
                        android:textSize="20dp"/>

                    <EditText
                        android:id="@+id/edit_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="false"
                        android:layout_alignStart="@+id/edit_targetdate"
                        android:layout_below="@+id/edit_targetdate"
                        android:layout_marginTop="50dp"
                        android:paddingLeft="15dp"
                        android:autoText="false"
                        android:ems="10"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:layout_alignStart="@id/edit_goal"
                        android:layout_alignBaseline="@id/edit_goal"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_stashvalue"
                        android:layout_alignBottom="@+id/edit_stashvalue"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/edit_stashvalue"
                        android:text="Stash Value"
                        android:textColor="#444444"
                        android:textSize="20dp"
                        android:layout_toLeftOf="@+id/edit_stashvalue"/>

                    <EditText
                        android:id="@+id/edit_stashvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="false"
                        android:layout_below="@+id/edit_goal"
                        android:layout_marginTop="50dp"
                        android:paddingLeft="15dp"
                        android:autoText="false"
                        android:ems="10"
                        android:inputType="number"
                        android:layout_alignLeft="@+id/edit_goal"
                        android:layout_alignStart="@+id/edit_goal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:layout_alignStart="@id/edit_stashvalue"
                        android:layout_alignBaseline="@id/edit_stashvalue"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moreOptions"
                        android:text="More Options"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_alignBaseline="@id/edit_stashvalue"
                        android:layout_alignEnd="@id/edit_stashvalue"
                        android:textSize="10dp"
                        android:onClick="showAddMoneyDialog"/>

                    <!-- <Button
                         android:id="@+id/button_one"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:ems="10"
                         android:onClick="CreateStash"
                         android:text=" Create Stash "
                         android:textColor="#444444"
                         android:textSize="20dp"
                         android:layout_below="@+id/edit_stashvalue"
                         android:layout_alignParentLeft="true"
                         android:layout_alignParentStart="true"
                         android:layout_marginTop="29dp" />-->

                    <Button
                        android:id="@+id/button_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="55dp"
                        android:background="#69B6B1"
                        android:paddingLeft="36dp"
                        android:paddingRight="36dp"
                        android:paddingBottom="18dp"
                        android:paddingTop="18dp"
                        android:textColor="#fff"
                        android:onClick="CreateStash"
                        android:text="Create Stash"/>


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

</android.support.v4.widget.DrawerLayout>